@model GameForum.Models.NewPostModel

<h1>Create Post | @Model.ForumName</h1>

<form asp-action="AddPost" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" id="inputEmail3" placeholder="Email">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="inputPassword3" placeholder="Password"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Submit Post</button>
        <input asp-for="ForumID" type="hidden" />
    </div>
</form>